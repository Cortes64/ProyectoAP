<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/footerBar"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="44dp"
            android:layout_marginTop="40dp"
            android:layout_marginRight="44dp"
            android:text="@string/nombre_estudiante"
            android:textAlignment="center"
            android:textSize="24sp" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:background="@drawable/circle_background"
            android:scaleType="centerInside"
            app:srcCompat="@drawable/ic_digital_wellbeing_outline" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:gravity="center"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/inputEditNombre"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/input_edit"
                android:ems="10"
                android:enabled="false"
                android:gravity="center"
                android:inputType="text"
                android:text="Nombre"
                android:textColor="#FFFFFF" />

            <ImageButton
                android:id="@+id/editButtonNombre"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/button_edit"
                android:backgroundTint="#B3B3B3"
                android:padding="10dp"
                app:srcCompat="@drawable/ic_edit" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/inputEditApellidos"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/input_edit"
                android:ems="10"
                android:enabled="false"
                android:gravity="center"
                android:inputType="text"
                android:text="Apellidos"
                android:textColor="#FFFFFF" />

            <ImageButton
                android:id="@+id/editButtonApellidos"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/button_edit"
                android:backgroundTint="#B3B3B3"
                android:padding="10dp"
                app:srcCompat="@drawable/ic_edit" />

        </LinearLayout>

        <Button
            android:id="@+id/boton_aplicar_cambios"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="75dp"
            android:layout_marginTop="30dp"
            android:layout_marginRight="75dp"

            android:backgroundTint="#6A9D87"
            android:minHeight="48dp"
            android:text="Guardar Cambios"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            app:cornerRadius="16dp" />

    </LinearLayout>

    <com.altrik.proyectoap.utilities.FooterBarView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/footerBar"
        android:layout_alignParentBottom="true" />
</RelativeLayout>